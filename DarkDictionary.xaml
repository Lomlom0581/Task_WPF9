<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle" TargetType="Control">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Foreground" Value="White"/>
        <Setter Property="TextBox.Padding" Value="10"/>
    </Style>
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ComboBox.Foreground" Value="White"/>
        <Setter Property="ComboBox.Padding" Value="3"/>
    </Style>
    <Style x:Key="ButtonBaseStyle" TargetType="ButtonBase" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ButtonBase.Foreground" Value="White"/>
        <Setter Property="ButtonBase.Padding" Value="3"/>
    </Style>
    <Style x:Key="MenuStyle" TargetType="Menu" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Foreground" Value="White"/>
        <Setter Property="Menu.Padding" Value="3"/>
    </Style>

</ResourceDictionary>